<Window x:Class="CanIPlay.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:CanIPlay"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        Title="Can I Play"
        Width="525"
        Height="350"
        mc:Ignorable="d">
  <Grid Name="TopGrid">
    <StackPanel Orientation="Horizontal">
      <Label Margin="2 2 2 2px" Content="{Binding Path=CurrentWebsite}" />
      <Label Margin="2 2 2 2px" Content="{Binding Path=CurrentStatus}" />
      <Label Margin="2 2 2 2px" Content="{Binding Path=RefreshStamp}" />
    </StackPanel>

  </Grid>
</Window>
